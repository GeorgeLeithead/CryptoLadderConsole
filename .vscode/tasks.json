{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/source/CryptoLadder/CryptoLadder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/source/CryptoLadder/CryptoLadder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publishRelease",
            "command": "dotnet",
            "type": "process",
            "problemMatcher": "$msCompile",
            "args": [
                "publish",
                "${workspaceFolder}/source/CryptoLadder/CryptoLadder.csproj",
                "-c", "Release",
                "-r", "win-x64",
                "-o", "${workspaceFolder}/Deployment/CryptoLadder",
                "/property:GenerateFullPaths=true",
                "/property:PublishSingleFile=true",
                "/consoleloggerparameters:NoSummary"
            ]
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/source/CryptoLadder/CryptoLadder.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}